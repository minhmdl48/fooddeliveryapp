<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="5dp"
        android:text="Mã đơn hàng: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/nbold" />

    <TextView
        android:fontFamily="@font/nmedium"
        android:id="@+id/order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_title"
        android:layout_marginStart="38dp"
        android:text="Thời gian đặt hàng "
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:fontFamily="@font/nmedium"
        android:id="@+id/order_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_title"
        android:layout_marginEnd="38dp"
        android:layout_toRightOf="@id/order_time"
        android:gravity="right"
        android:text="1"
        android:textColor="@color/black" />

    <TextView
        android:fontFamily="@font/nmedium"
        android:id="@+id/order_total_price"
        android:layout_below="@id/order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:text="Tổng tiền: "
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:fontFamily="@font/nmedium"
        android:id="@+id/order_tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_time"
        android:layout_marginEnd="38dp"
        android:layout_toRightOf="@id/order_time"
        android:gravity="right"
        android:text="đ100000"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_total_price"
        android:layout_marginStart="38dp"
        android:layout_marginTop="3dp"
        android:text="Trạng thái : Đã hoàn thành"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/nbold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/order_status"
        android:layout_marginTop="20dp"
        android:background="@color/underline" />



</RelativeLayout>