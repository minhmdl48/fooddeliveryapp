<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_marginTop="-20dp"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:backgroundTint="@color/starbucks_green"
                android:background="@drawable/roundstylebig" />

            <TextView
                android:fontFamily="@font/nmedium"
                android:id="@+id/search_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:drawablePadding="5dp"
                android:hint="Search"
                android:padding="13dp" />

            <RelativeLayout
                android:id="@+id/rl69"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:layout_below="@id/search_box">

                <View
                    android:id="@+id/profile_logout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:fontFamily="@font/nmedium"
                    android:id="@+id/tv_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Minh"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:fontFamily="@font/nbold"
                    android:id="@+id/ed_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/tv_saldo"
                    android:text="đ20000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/tv_saldo"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@id/ed_saldo"
                    android:src="@drawable/ic_baseline_account_balance_wallet_24" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/starbucks_green"
                    android:fontFamily="@font/nmedium"
                    android:text="+ Nạp tiền "
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ly1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl69"
                android:layout_marginHorizontal="13dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:fontFamily="@font/nbold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Món ăn phổ biến"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:fontFamily="@font/nmedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xem tất cả"
                    android:gravity="right"
                    android:textColor="@color/starbucks_green"
                    android:textSize="18sp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly1"
                android:layout_margin="5dp" />

            <LinearLayout
                android:id="@+id/ly2"
                android:layout_below="@+id/rv_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:fontFamily="@font/nbold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Các món của chúng tôi"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:fontFamily="@font/nmedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xem tất cả"
                    android:gravity="right"
                    android:textColor="@color/starbucks_green"
                    android:textSize="18sp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_all_item"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_below="@+id/ly2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>